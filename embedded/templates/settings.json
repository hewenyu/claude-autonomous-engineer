{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-autonomous hook claude_protocol",
            "timeout": 5
          }
        ]
      }
    ],

    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-autonomous hook inject_state",
            "timeout": 5
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claude-autonomous hook codex_review_gate",
            "timeout": 180
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "Write|Edit|Create",
        "hooks": [
          {
            "type": "command",
            "command": "claude-autonomous hook progress_sync",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "claude-autonomous hook repo_map_sync",
            "timeout": 60
          }
        ]
      }
      ,
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claude-autonomous hook error_tracker",
            "timeout": 5
          }
        ]
      }
    ],

    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-autonomous hook loop_driver",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
