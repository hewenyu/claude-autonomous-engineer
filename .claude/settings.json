{
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "python3.claude/hooks/inject_state.py"
      }
    ],
    "PreToolUse":
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3.claude/hooks/loop_driver.py"
          }
        ]
      }
    ]
  },
  "commands": {
    "architect": {
      "type": "prompt",
      "file": ".claude/agents/architect.md"
    },
    "executor": {
      "type": "prompt",
      "file": ".claude/agents/executor.md"
    },
    "review": {
      "type": "prompt",
      "file": ".claude/agents/reviewer.md"
    }
  }
}